<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amazonclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AmazonClone">
        <activity android:name=".ShowHistory"></activity>
        <activity android:name=".PlaceOrderActivity" />
        <activity android:name=".ProductDetails" />
        <activity android:name=".MenuFile.ProfileActivity" />
        <activity android:name=".MenuFile.CartActivity" />
        <activity android:name=".MenuFile.SearchActivity" />
        <activity android:name=".MenuFile.AddProduct" />
        <activity android:name=".MenuFile.BaseActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreen" />
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>